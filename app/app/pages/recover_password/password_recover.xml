<Page 
    xmlns="http://www.nativescript.org/tns.xsd" 
    loaded="onLoaded" 
    navigatedTo="onNavigatedTo" navigatingTo="onNavigatingTo"
    
    actionBarHidden="true"
    xmlns:stBar="nativescript-statusbar"
    xmlns:Card="nativescript-cardview">

    <stBar:StatusBar ios:barStyle="light" android:barStyle="#3f3b3b" />

    <Page.actionBar>
        <ActionBar title="Recovery" icon="" style="color:white;" class="base_color">
            <NavigationButton text="Back" icon="" tap="" />
            <ActionBar.actionItems>
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>



    <ScrollView>
        <StackLayout>
            <Card:CardView class="cardStyle" margin="8" elevation="40" radius="5">
                <StackLayout style="padding:20px;">
                    <image src="res://logo" stretch="aspectFill" width="180" style="margin-top:20;" />

                    <!-- Loading Indicator -->
                    <StackLayout visibility="{{ loadingStatus ? 'visible' : 'collapsed' }}">
                        <ActivityIndicator style="margin-top:40;" class="base_color" busy="{{loadingStatus}}" />
                    </StackLayout>
                    
            

                    <!--<Label text="Ingiza namba ya simu" style="color:#bab8b8;font-size:30px;align:center;" textWrap="true" />-->
                    
                    <StackLayout visibility="{{ !loadingStatus ? 'visible' : 'collapsed' }}">
                        <GridLayout rows="*" columns="*" style="margin-top:20px;">
                            <TextField row="0" col="0" keyboardType="number" hint="Weka namba ya simu,kisha bonyeza recover now" text="{{  userObj.phone_no }}" style="margin:5px;" class="txt-input"/>
                        </GridLayout>

                        <Button text="Recover Now" tap="{{requestNewPassword}}" style="margin:10px;;color:white;" class="base_back_color" />

                        <Label text="Utapokea ujumbe mfupi wenye namba mpya ya siri,Bonyeza kitufe cha login(button) kwa namba yako ya simu na namba mpya uliyotumiwa(Ujumbe utatumwa ndani ya dk 3)" textWrap="true" style="text-align:center;color:gray;font-size:12px;margin-top:20px;" />
            
                    </StackLayout>
                    
                    
                </StackLayout>
            </Card:CardView>
            
        </StackLayout>
    </ScrollView>

    
</Page>